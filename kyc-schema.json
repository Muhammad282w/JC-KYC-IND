{
  "form_metadata": {
    "title": "Know Your Customer (KYC) Form - Individual",
    "title_ar": "نموذج معرفة العميل - فرد",
    "company": "Joa Capital",
    "company_ar": "شركة جوا المالية",
    "license": "CMA License 21219-02",
    "version": "2023",
    "form_type": "individual_kyc"
  },
  "sections": {
    "client_file_info": {
      "title": "Client File Information",
      "title_ar": "معلومات ملف العميل",
      "order": 1,
      "fields": {
        "client_type": {
          "type": "dropdown",
          "label": "Client Type",
          "label_ar": "نوع العميل",
          "required": true,
          "options": [{"value": "individual", "label": "Individual", "label_ar": "فرد"}]
        },
        "client_name": {
          "type": "text",
          "label": "Client Name",
          "label_ar": "أسم العميل",
          "required": true
        },
        "client_file_number": {
          "type": "text",
          "label": "Client File Number",
          "label_ar": "رقم ملف العميل",
          "required": true
        },
        "investment_account_number": {
          "type": "text",
          "label": "Client Investment Account Number",
          "label_ar": "رقم الحساب الاستثماري للعميل",
          "required": true
        },
        "account_currency": {
          "type": "checkbox",
          "label": "Account Currencies",
          "label_ar": "عملة الحساب",
          "required": true,
          "options": [
            {"value": "sar", "label": "Saudi Riyal", "label_ar": "الريال السعودي"},
            {"value": "usd", "label": "US Dollar", "label_ar": "دولار أمريكي"},
            {"value": "other", "label": "Other", "label_ar": "أخرى"}
          ]
        },
        "other_currency": {
          "type": "text",
          "label": "Other Currency (Please specify)",
          "label_ar": "عملة أخرى (يرجى التحديد)",
          "required": false,
          "conditional_on": "account_currency includes other"
        },
        "portfolio_type": {
          "type": "radio",
          "label": "Portfolio Type",
          "label_ar": "نوع المحفظة",
          "required": true,
          "options": [
            {"value": "local_securities", "label": "Portfolio of local securities", "label_ar": "محفظة أوراق مالية محلية"},
            {"value": "foreign_securities", "label": "Foreign securities portfolio", "label_ar": "محفظة أوراق مالية أجنبية"},
            {"value": "investment_funds", "label": "Investment funds portfolio", "label_ar": "استثمار صناديق"}
          ]
        }
      }
    },
    "basic_info": {
      "title": "Basic Information",
      "title_ar": "البيانات الأساسية",
      "order": 2,
      "fields": {
        "title": {
          "type": "dropdown",
          "label": "Title",
          "label_ar": "اللقب",
          "required": true,
          "options": [
            {"value": "mr", "label": "Mr.", "label_ar": "السيد"},
            {"value": "mrs", "label": "Mrs.", "label_ar": "السيدة"},
            {"value": "miss", "label": "Miss", "label_ar": "الآنسة"},
            {"value": "other", "label": "Other", "label_ar": "آخر"}
          ]
        },
        "first_name_ar": {
          "type": "text",
          "label": "First Name (Arabic)",
          "label_ar": "الاسم الأول",
          "required": true
        },
        "father_name_ar": {
          "type": "text",
          "label": "Father's Name (Arabic)",
          "label_ar": "اسم الأب",
          "required": true
        },
        "grandfather_name_ar": {
          "type": "text",
          "label": "Grandfather's Name (Arabic)",
          "label_ar": "اسم الجد",
          "required": true
        },
        "family_name_ar": {
          "type": "text",
          "label": "Family Name (Arabic)",
          "label_ar": "اسم العائلة",
          "required": true
        },
        "first_name_en": {
          "type": "text",
          "label": "First Name (English)",
          "label_ar": "الاسم الأول بالانجليزية",
          "required": true
        },
        "father_name_en": {
          "type": "text",
          "label": "Father's Name (English)",
          "label_ar": "اسم الأب بالانجليزية",
          "required": true
        },
        "grandfather_name_en": {
          "type": "text",
          "label": "Grandfather's Name (English)",
          "label_ar": "اسم الجد بالانجليزية",
          "required": true
        },
        "family_name_en": {
          "type": "text",
          "label": "Family Name (English)",
          "label_ar": "اسم العائلة بالانجليزية",
          "required": true
        },
        "nationality": {
          "type": "text",
          "label": "Nationality",
          "label_ar": "الجنسية",
          "required": true
        },
        "gender": {
          "type": "radio",
          "label": "Gender",
          "label_ar": "الجنس",
          "required": true,
          "options": [
            {"value": "male", "label": "Male", "label_ar": "ذكر"},
            {"value": "female", "label": "Female", "label_ar": "انثى"}
          ]
        },
        "birth_date_hijri": {
          "type": "date",
          "label": "Date of Birth (Hijri)",
          "label_ar": "تاريخ الميلاد (بالهجري)",
          "required": true
        },
        "birth_date_gregorian": {
          "type": "date",
          "label": "Date of Birth (Gregorian)",
          "label_ar": "تاريخ الميلاد (بالميلادي)",
          "required": true
        },
        "birth_country": {
          "type": "text",
          "label": "Country of Birth",
          "label_ar": "دولة الميلاد",
          "required": true
        },
        "birth_place": {
          "type": "text",
          "label": "Place of Birth",
          "label_ar": "مكان الميلاد",
          "required": true
        },
        "residence_place": {
          "type": "text",
          "label": "Place of Residence",
          "label_ar": "مكان الإقامة",
          "required": true
        },
        "id_type": {
          "type": "radio",
          "label": "ID Type",
          "label_ar": "نوع الهوية",
          "required": true,
          "options": [
            {"value": "national_id", "label": "National ID", "label_ar": "الهوية الوطنية"},
            {"value": "iqama", "label": "Iqama", "label_ar": "اقامة"},
            {"value": "passport", "label": "Passport", "label_ar": "جواز سفر"},
            {"value": "other", "label": "Other", "label_ar": "أخرى"}
          ]
        },
        "id_number": {
          "type": "text",
          "label": "ID Number",
          "label_ar": "رقم الهوية",
          "required": true
        },
        "id_expiry_date": {
          "type": "date",
          "label": "ID Expiry Date",
          "label_ar": "تاريخ الانتهاء",
          "required": true
        },
        "marital_status": {
          "type": "radio",
          "label": "Marital Status",
          "label_ar": "الحالة الاجتماعية",
          "required": true,
          "options": [
            {"value": "single", "label": "Single", "label_ar": "اعزب"},
            {"value": "married", "label": "Married", "label_ar": "متزوج"},
            {"value": "divorced", "label": "Divorced", "label_ar": "مطلق"},
            {"value": "widowed", "label": "Widowed", "label_ar": "أرمل"}
          ]
        },
        "number_of_dependents": {
          "type": "number",
          "label": "Number of Dependents",
          "label_ar": "عدد أفراد الأسرة",
          "required": true
        }
      }
    },
    "contact_info": {
      "title": "Contact Details and Correspondence",
      "title_ar": "بيانات الاتصال والمراسلة",
      "order": 3,
      "fields": {
        "national_address_name": {
          "type": "text",
          "label": "Name (National Address)",
          "label_ar": "الاسم",
          "required": true
        },
        "national_address_district": {
          "type": "text",
          "label": "District",
          "label_ar": "الحي",
          "required": true
        },
        "national_address_street": {
          "type": "text",
          "label": "Street",
          "label_ar": "الشارع",
          "required": true
        },
        "national_address_building": {
          "type": "text",
          "label": "Building/Flat No.",
          "label_ar": "رقم المبنى",
          "required": true
        },
        "national_address_zipcode": {
          "type": "text",
          "label": "Zip Code",
          "label_ar": "رمز البريد",
          "required": true
        },
        "national_address_additional_code": {
          "type": "text",
          "label": "Additional Code",
          "label_ar": "الرمز الإضافي",
          "required": false
        },
        "national_address_city": {
          "type": "text",
          "label": "City",
          "label_ar": "المدينة",
          "required": true
        },
        "national_address_country": {
          "type": "text",
          "label": "Country",
          "label_ar": "الدولة",
          "required": true
        },
        "mobile_number": {
          "type": "text",
          "label": "Mobile Number",
          "label_ar": "رقم الجوال",
          "required": true
        },
        "other_number": {
          "type": "text",
          "label": "Other Number",
          "label_ar": "رقم آخر",
          "required": false
        },
        "email": {
          "type": "email",
          "label": "Email",
          "label_ar": "البريد الإلكتروني",
          "required": true
        },
        "correspondence_method": {
          "type": "checkbox",
          "label": "Correspondence Methods",
          "label_ar": "آلية المراسلة",
          "required": true,
          "options": [
            {"value": "mail", "label": "Mail", "label_ar": "بريد"},
            {"value": "sms", "label": "SMS", "label_ar": "رسالة نصية"},
            {"value": "email", "label": "Email", "label_ar": "بريد إلكتروني"},
            {"value": "not_specify", "label": "Not Specified", "label_ar": "لا يوجد تحديد"}
          ]
        },
        "correspondence_language": {
          "type": "radio",
          "label": "Correspondence Language",
          "label_ar": "لغة المراسلات",
          "required": true,
          "options": [
            {"value": "arabic", "label": "Arabic", "label_ar": "عربي"},
            {"value": "english", "label": "English", "label_ar": "انجليزي"},
            {"value": "not_specify", "label": "Not Specified", "label_ar": "لا يوجد تحديد"}
          ]
        }
      }
    },
    "beneficial_owner": {
      "title": "Beneficial Owner of The Account",
      "title_ar": "المستفيد الحقيقي من الحساب",
      "order": 4,
      "fields": {
        "is_beneficial_owner": {
          "type": "radio",
          "label": "Are you the beneficial owner of this account?",
          "label_ar": "هل انت المستفيد الحقيقي لهذا الحساب؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "representative_capacity": {
          "type": "checkbox",
          "label": "Representative Capacity",
          "label_ar": "صفة المستفيد",
          "required": false,
          "conditional_on": "is_beneficial_owner=no",
          "options": [
            {"value": "authorized_person", "label": "Authorized Person", "label_ar": "وكيل"},
            {"value": "custodian_guardian", "label": "Custodian/Guardian", "label_ar": "وصي/ولي"},
            {"value": "personal_reference", "label": "Personal Reference", "label_ar": "مرجع شخصي"},
            {"value": "legal_representative", "label": "Legal Representative", "label_ar": "الممثل الشرعي للمحجوز عليه"},
            {"value": "official_receiver", "label": "Official Receiver", "label_ar": "حارس قضائي"},
            {"value": "others", "label": "Others", "label_ar": "أخرى"}
          ]
        },
        "is_non_resident": {
          "type": "radio",
          "label": "Are you not resident of the Kingdom?",
          "label_ar": "هل انت شخص غير مقيم في المملكة؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        }
      }
    },
    "tax_compliance": {
      "title": "Self-Certification & Declaration Form (FATCA & CRS)",
      "title_ar": "الإبلاغ الذاتي (قانون الامتثال الضريبي للحسابات الأجنبية ومعيار شهادة إقرار المشترك)",
      "order": 5,
      "fields": {
        "is_us_person": {
          "type": "radio",
          "label": "Are you a US person?",
          "label_ar": "هل أنت شخص من الولايات المتحدة الأمريكية؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "subject_to_taxes_outside_ksa": {
          "type": "radio",
          "label": "Are you subject to taxes in any country outside Saudi Arabia?",
          "label_ar": "هل انت خاضع للضرائب في أي بلد أو بلدان خارج المملكة العربية السعودية؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "tax_country": {
          "type": "text",
          "label": "If yes, please identify the country",
          "label_ar": "في حال نعم، أرجو ذكر البلد",
          "required": false,
          "conditional_on": "subject_to_taxes_outside_ksa=yes"
        },
        "has_immigrant_visa": {
          "type": "radio",
          "label": "Do you have an immigrant visa or permanent resident status in a country other than Saudi Arabia?",
          "label_ar": "هل لديك تأشيرة هجرة أو إقامة دائمة في بلد آخر غير المملكة العربية السعودية؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "permanent_residency_status": {
          "type": "text",
          "label": "Please indicate the state of each permanent residency",
          "label_ar": "يرجى توضيح الحالة لكل إقامة دائمة",
          "required": false,
          "conditional_on": "has_immigrant_visa=yes"
        }
      }
    },
    "us_tax_info": {
      "title": "US Tax Information (Form 3)",
      "title_ar": "معلومات الضريبة الأمريكية (نموذج 3)",
      "order": 6,
      "conditional_on": "tax_compliance.is_us_person=yes",
      "fields": {
        "ssn": {
          "type": "text",
          "label": "Social Security Number (SSN)",
          "label_ar": "رقم الضمان الاجتماعي",
          "required": false,
          "pattern": "^[0-9]{3}-[0-9]{2}-[0-9]{4}$"
        },
        "itin": {
          "type": "text",
          "label": "Individual Taxpayer Identification Number (ITIN)",
          "label_ar": "رقم تعريف المكلف",
          "required": false,
          "pattern": "^9[0-9]{2}-[0-9]{2}-[0-9]{4}$"
        },
        "atin": {
          "type": "text",
          "label": "Taxpayer Identification Number for Pending US Adoptions (ATIN)",
          "label_ar": "رقم تعريف ضريبي لحالات التبني المعلقة في الولايات المتحدة الأمريكية",
          "required": false
        }
      }
    },
    "tax_residency_info": {
      "title": "Tax Residency Information",
      "title_ar": "معلومات الإقامة الضريبية",
      "order": 7,
      "fields": {
        "tax_residence_country_1": {
          "type": "text",
          "label": "Country/Jurisdiction 1",
          "label_ar": "البلد/الولايات القضائية 1",
          "required": false
        },
        "tax_id_1": {
          "type": "text",
          "label": "Taxpayer Identification Number 1",
          "label_ar": "رقم التعريف الضريبي 1",
          "required": false
        },
        "tax_residence_country_2": {
          "type": "text",
          "label": "Country/Jurisdiction 2",
          "label_ar": "البلد/الولايات القضائية 2",
          "required": false
        },
        "tax_id_2": {
          "type": "text",
          "label": "Taxpayer Identification Number 2",
          "label_ar": "رقم التعريف الضريبي 2",
          "required": false
        },
        "tax_residence_country_3": {
          "type": "text",
          "label": "Country/Jurisdiction 3",
          "label_ar": "البلد/الولايات القضائية 3",
          "required": false
        },
        "tax_id_3": {
          "type": "text",
          "label": "Taxpayer Identification Number 3",
          "label_ar": "رقم التعريف الضريبي 3",
          "required": false
        },
        "tin_unavailable_reason": {
          "type": "radio",
          "label": "If TIN not available, reason",
          "label_ar": "في حال عدم وجود رقم التعريف الضريبي، السبب",
          "required": false,
          "options": [
            {"value": "reason_a", "label": "Country does not issue TINs", "label_ar": "البلد لا تصدر أرقام تعريف ضريبية"},
            {"value": "reason_b", "label": "Unable to obtain TIN", "label_ar": "غير قادر على الحصول على رقم تعريف ضريبي"},
            {"value": "reason_c", "label": "No TIN required", "label_ar": "غير مطلوب رقم تعريف ضريبي"}
          ]
        }
      }
    },
    "bank_info": {
      "title": "Bank Information",
      "title_ar": "معلومات البنك",
      "order": 8,
      "fields": {
        "main_bank_name": {
          "type": "text",
          "label": "Main Bank Name",
          "label_ar": "اسم البنك الرئيسي",
          "required": true
        },
        "bank_address": {
          "type": "text",
          "label": "Bank Address",
          "label_ar": "عنوان البنك",
          "required": true
        },
        "bank_city_branch": {
          "type": "text",
          "label": "City/Branch",
          "label_ar": "المدينة/الفرع",
          "required": true
        },
        "account_holder_name": {
          "type": "text",
          "label": "Account Holder's Name",
          "label_ar": "اسم صاحب الحساب",
          "required": true
        },
        "account_number_iban": {
          "type": "text",
          "label": "Account Number (IBAN)",
          "label_ar": "رقم الحساب (IBAN)",
          "required": true,
          "pattern": "^SA[0-9]{22}$"
        }
      }
    },
    "general_info": {
      "title": "General Information",
      "title_ar": "معلومات عامة عن العميل",
      "order": 9,
      "fields": {
        "is_board_member": {
          "type": "radio",
          "label": "Are you a member of board of directors or audit committee or senior executive in a listed/licensed company?",
          "label_ar": "هل انت عضو مجلس إدارة أو لجنة مراجعة أو أحد كبار التنفيذيين في شركة مدرجة أو مرخصة من هيئة السوق المالية؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "is_pep": {
          "type": "radio",
          "label": "Are you a politically exposed person or related to one?",
          "label_ar": "هل أنت شخص شغل أو مكلف بمهمات عليا في المملكة أو في دولة أجنبية أو مناصب إدارة عليا أو وظيفة في إحدى المنظمات الدولية؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        },
        "owns_10_percent_or_more": {
          "type": "radio",
          "label": "Do you own 10% or more in any listed company?",
          "label_ar": "هل تملك أو مساهم ب10% أو أكثر في أي شركة مدرجة؟",
          "required": true,
          "options": [
            {"value": "yes", "label": "Yes", "label_ar": "نعم"},
            {"value": "no", "label": "No", "label_ar": "لا"}
          ]
        }
      }
    },
    "suitability_assessment": {
      "title": "Suitability and Risk Assessment Tolerance Questionnaire",
      "title_ar": "استبيان تقييم الملائمة وتحمل المخاطر",
      "order": 10,
      "fields": {
        "education_level": {
          "type": "radio",
          "label": "Educational Level",
          "label_ar": "المستوى التعليمي",
          "required": true,
          "options": [
            {"value": "no_education", "label": "No Education", "label_ar": "لا يوجد", "points": 0},
            {"value": "primary", "label": "Primary", "label_ar": "ابتدائي", "points": 1},
            {"value": "intermediate", "label": "Intermediate", "label_ar": "متوسط", "points": 2},
            {"value": "high_school", "label": "High School", "label_ar": "ثانوي", "points": 3},
            {"value": "diploma", "label": "Diploma", "label_ar": "دبلوم", "points": 4},
            {"value": "bachelor", "label": "Bachelor", "label_ar": "جامعي", "points": 5},
            {"value": "postgraduate", "label": "Postgraduate", "label_ar": "دراسات عليا", "points": 6}
          ]
        },
        "work_status": {
          "type": "radio",
          "label": "Work Status",
          "label_ar": "الحالة الوظيفية",
          "required": true,
          "options": [
            {"value": "unemployed", "label": "Unemployed", "label_ar": "عاطل عن العمل", "points": 0},
            {"value": "housewife", "label": "Housewife", "label_ar": "ربة منزل", "points": 2},
            {"value": "student", "label": "Student", "label_ar": "طالب", "points": 3},
            {"value": "employee", "label": "Employee", "label_ar": "موظف", "points": 4},
            {"value": "retired", "label": "Retired", "label_ar": "متقاعد", "points": 5},
            {"value": "businessman", "label": "Businessman", "label_ar": "رجل أعمال", "points": 6}
          ]
        }
      }
    },
    "financial_situation": {
      "title": "Client's Financial Situation",
